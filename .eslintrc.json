{
    "root": true,
    "plugins": ["react-hooks"],
    "extends": [
      "next/core-web-vitals",
      "plugin:react-hooks/recommended"
    ],
    "env": {
      "browser": true,
      "es2022": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module",
      "ecmaFeatures": { "jsx": true }
    },
    "ignorePatterns": [
      "node_modules/",
      "backend/",
      "server/",
      ".next/",
      "**/.next/**",
      "**/*.d.ts"
    ],
    "rules": {
      // Désactive certaines règles qui posent problème
      "@next/next/no-img-element": "off",
      "react-hooks/exhaustive-deps": "warn"
    }
  }